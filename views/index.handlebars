<container class="text-center">

<img src="../assets/images/burger-title.png" id="burgerImage">
<h1 id="burgerTitle">The Burger Diary!</h1>

<div id="readyBox">
<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div id="eatenBox">
<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/if}}
  {{/each}}
</ul>
</div>

<div id="addBurger">
<form class="create-form">
  <div class="form-group">
    <input type="text" id="bu" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>

</container>