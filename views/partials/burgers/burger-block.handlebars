{{#if eaten}}

<li id="eaten">
	{{burger_name}}
	<button class="delete" data-id="{{id}}" id="deleteButton">
	<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
	</button>
</li>

{{else}}

<li id="ready">
	{{burger_name}}
	<button class="devour" data-id="{{id}}" id="devourButton">
	Devour it!
	</button>
</li>

{{/if}}
